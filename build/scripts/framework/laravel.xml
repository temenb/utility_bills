<project default="laravel">

    <target name="cache-clear" description="Cleanup cache">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="cache:clear"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="route:clear"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="view:clear"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="config:clear"/>
        </exec>
    </target>

    <target name="create-cache" description="Create cache">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="config:cache"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="route:cache"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="view:cache"/>
        </exec>
    </target>

    <target name="maintenance-off" description="Maintenance mod off">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="up"/>
        </exec>
    </target>

    <target name="maintenance-on" description="Maintenance mod on">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="down"/>
        </exec>
    </target>

    <target name="migration-refresh" description="Refresh migrations">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="migrate:refresh"/>
        </exec>
    </target>

    <target name="migration-apply" description="Apply migrations">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="migrate"/>
        </exec>
    </target>

    <target name="migration-rollback-last" description="Reset last migration">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="migrate:rollback --step=1"/>
        </exec>
    </target>

</project>
