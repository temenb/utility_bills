<project default="laravel">

    <target name="clear-cache" description="Cleanup cache">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="cache:clear"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="route:clear"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="view:clear"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="config:clear"/>
        </exec>
    </target>

    <target name="create-cache" description="Create cache">
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="config:cache"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="route:cache"/>
        </exec>
        <exec executable="php">
            <arg line="artisan"/>
            <arg line="view:cache"/>
        </exec>
    </target>

</project>
